<section class="menue">
  <div class="container">
    <div class="menue-container" id="sticky">
      <div class="menue-logo cp">
        {{ page.site_branding }}
      </div>
      <div class="menue-list">
        {{ page.navigation }}
      </div>
      <div class="menue-cta">
        {{ page.navigation_right }}          
        {% if logged_in == 'YES' %} 
          <a href="/aureus/user/logout" class="menue-cta-login cp" id="logout-button" style="display:inline-block;">logout</a>
        {%else%}   
          <div class="menue-cta-login cp" id="login-button" style="display:inline-block;">Login</div>
        {% endif%}
      </div>
    </div>
  </div>
</section>
{{ page.content }}
<section class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-left">
        {{ page.footer_left }}
      </div>
      <div class="footer-middle">
        {{ page.footer_middle }}
      </div>
      <div class="footer-right">
        {{ page.footer_right }}
      </div>
    </div>
  </div>
  <section class="login" id="login">
    <div class="login-container">
      <div class="login-content">
        <h2 class="login-content-headline">Login</h2>
        {{ page.login_block }}
        <p class="login-forgot">Passwort vergessen?</p>
        <div class="login-close" id="login-close">&nbsp;</div>
      </div>
    </div>
  </section>
</section>
